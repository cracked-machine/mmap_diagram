{
  "$defs": {
    "IndentScheme": {
      "enum": [
        "linear",
        "alternate",
        "inline"
      ],
      "title": "IndentScheme",
      "type": "string"
    },
    "MemoryMap": {
      "properties": {
        "memory_regions": {
          "additionalProperties": {
            "$ref": "#/$defs/MemoryRegion"
          },
          "description": "Memory map containing memory regions.",
          "title": "Memory Regions",
          "type": "object"
        },
        "height": {
          "default": 0,
          "description": "Internal Use. This will be automically adjusted depending on the diagram size and number of memory maps.",
          "title": "Height",
          "type": "integer"
        },
        "width": {
          "default": 0,
          "description": "Internal Use. This will be automically adjusted depending on the diagram size and number of memory maps.",
          "title": "Width",
          "type": "integer"
        }
      },
      "required": [
        "memory_regions"
      ],
      "title": "MemoryMap",
      "type": "object"
    },
    "MemoryRegion": {
      "properties": {
        "origin": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "string"
            }
          ],
          "description": "Origin address of the MemoryMap. In hex format string.",
          "title": "Origin"
        },
        "size": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "string"
            }
          ],
          "description": "Size (in bytes) of the MemoryMap. In hex format string.",
          "title": "Size"
        },
        "links": {
          "default": [],
          "description": "Links to other memory regions. E.g. \n[\n\n{'ParentMemoryMap1': 'ChildMemoryRegion1'}\n\n...\n\n{'ParentMemoryMapN': 'ChildMemoryRegionN'}\n]",
          "items": {
            "maxItems": 2,
            "minItems": 2,
            "prefixItems": [
              {
                "type": "string"
              },
              {
                "type": "string"
              }
            ],
            "type": "array"
          },
          "title": "Links",
          "type": "array"
        },
        "freespace": {
          "default": "",
          "description": "Internal Use",
          "title": "Freespace",
          "type": "integer"
        },
        "collisions": {
          "Description": "Internal Use",
          "default": {},
          "title": "Collisions",
          "type": "object"
        }
      },
      "required": [
        "origin",
        "size"
      ],
      "title": "MemoryRegion",
      "type": "object"
    }
  },
  "properties": {
    "name": {
      "description": "The name of the diagram.",
      "title": "Name",
      "type": "string"
    },
    "height": {
      "description": "The height of the diagram.",
      "title": "Height",
      "type": "integer"
    },
    "width": {
      "description": "The width of the diagram.",
      "title": "Width",
      "type": "integer"
    },
    "legend_width": {
      "default": 30,
      "description": "The percentage width of the diagram legend",
      "title": "Legend Width",
      "type": "integer"
    },
    "bgcolour": {
      "default": "white",
      "description": "The background colour used for the diagram",
      "title": "Bgcolour",
      "type": "string"
    },
    "void_fill_colour": {
      "default": "white",
      "description": "Fill colour for the void region blocks",
      "title": "Void Fill Colour",
      "type": "string"
    },
    "void_line_colour": {
      "default": "grey",
      "description": "Line colour for the void region blocks",
      "title": "Void Line Colour",
      "type": "string"
    },
    "title_fill_colour": {
      "default": "blanchedalmond",
      "description": "Fill colour for the memory region title blocks",
      "title": "Title Fill Colour",
      "type": "string"
    },
    "title_line_colour": {
      "default": "grey",
      "description": "Line colour for the emory region title blocks",
      "title": "Title Line Colour",
      "type": "string"
    },
    "memory_maps": {
      "additionalProperties": {
        "$ref": "#/$defs/MemoryMap"
      },
      "description": "The diagram frame. Can contain many memory maps.",
      "title": "Memory Maps",
      "type": "object"
    },
    "indent_scheme": {
      "allOf": [
        {
          "$ref": "#/$defs/IndentScheme"
        }
      ],
      "default": "alternate",
      "description": "Drawing indent for Memory Regions"
    }
  },
  "required": [
    "name",
    "height",
    "width",
    "memory_maps"
  ],
  "title": "Diagram",
  "type": "object"
}