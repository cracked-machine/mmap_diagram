{
  "$defs": {
    "IndentScheme": {
      "enum": [
        "linear",
        "alternate"
      ],
      "title": "IndentScheme",
      "type": "string"
    },
    "MemoryMap": {
      "properties": {
        "memory_regions": {
          "additionalProperties": {
            "$ref": "#/$defs/MemoryRegion"
          },
          "description": "Memory map containing memory regions.",
          "title": "Memory Regions",
          "type": "object"
        },
        "map_height": {
          "default": 0,
          "description": "Internal Use. This will be automically adjusted depending on the diagram size and number of memory maps.",
          "title": "Map Height",
          "type": "integer"
        },
        "map_width": {
          "default": 0,
          "description": "Internal Use. This will be automically adjusted depending on the diagram size and number of memory maps.",
          "title": "Map Width",
          "type": "integer"
        }
      },
      "required": [
        "memory_regions"
      ],
      "title": "MemoryMap",
      "type": "object"
    },
    "MemoryRegion": {
      "properties": {
        "memory_region_origin": {
          "description": "Origin address of the MemoryMap. In hex format string.",
          "title": "Memory Region Origin",
          "type": "integer"
        },
        "memory_region_size": {
          "description": "Size (in bytes) of the MemoryMap. In hex format string.",
          "title": "Memory Region Size",
          "type": "integer"
        },
        "memory_region_links": {
          "default": [],
          "description": "Links to other memory regions. E.g. \n[\n\n{'ParentMemoryMap1': 'ChildMemoryRegion1'}\n\n...\n\n{'ParentMemoryMapN': 'ChildMemoryRegionN'}\n]",
          "items": {
            "maxItems": 2,
            "minItems": 2,
            "prefixItems": [
              {
                "type": "string"
              },
              {
                "type": "string"
              }
            ],
            "type": "array"
          },
          "title": "Memory Region Links",
          "type": "array"
        },
        "freespace": {
          "default": "",
          "description": "Internal Use",
          "title": "Freespace",
          "type": "integer"
        },
        "collisions": {
          "Description": "Internal Use",
          "default": {},
          "title": "Collisions",
          "type": "object"
        }
      },
      "required": [
        "memory_region_origin",
        "memory_region_size"
      ],
      "title": "MemoryRegion",
      "type": "object"
    }
  },
  "properties": {
    "diagram_name": {
      "description": "The name of the diagram.",
      "title": "Diagram Name",
      "type": "string"
    },
    "diagram_height": {
      "description": "The height of the diagram.",
      "title": "Diagram Height",
      "type": "integer"
    },
    "diagram_width": {
      "description": "The width of the diagram.",
      "title": "Diagram Width",
      "type": "integer"
    },
    "diagram_legend_width": {
      "default": 30,
      "description": "The percentage width of the diagram legend",
      "title": "Diagram Legend Width",
      "type": "integer"
    },
    "diagram_bgcolour": {
      "default": "oldlace",
      "description": "The background colour used for the diagram",
      "title": "Diagram Bgcolour",
      "type": "string"
    },
    "memory_maps": {
      "additionalProperties": {
        "$ref": "#/$defs/MemoryMap"
      },
      "description": "The diagram frame. Can contain many memory maps.",
      "title": "Memory Maps",
      "type": "object"
    },
    "indent_scheme": {
      "allOf": [
        {
          "$ref": "#/$defs/IndentScheme"
        }
      ],
      "default": "linear",
      "description": "Drawing indent for Memory Regions"
    }
  },
  "required": [
    "diagram_name",
    "diagram_height",
    "diagram_width",
    "memory_maps"
  ],
  "title": "Diagram",
  "type": "object"
}